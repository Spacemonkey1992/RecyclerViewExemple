<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">


        <ImageView android:id="@+id/imgContact"
                   android:layout_width="100dp"
                   android:layout_height="100dp" app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/txtNom"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/imgContact"
                android:layout_marginStart="8dp"/>


        <TextView
                android:id="@+id/txtTelephone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                app:layout_constraintStart_toEndOf="@+id/imgContact"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtNom"
        />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>